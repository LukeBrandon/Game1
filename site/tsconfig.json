{
  "compilerOptions": {
      "module": "commonjs",
      "esModuleInterop": true,
      "noImplicitAny": true,
      "experimentalDecorators": true,
      "suppressImplicitAnyIndexErrors": true,
      "removeComments": true,
      "preserveConstEnums": false,
      "allowSyntheticDefaultImports": true,
      "sourceMap": true,
      "target": "ES2017",
      "outDir": "./bin",
  },
  "lib": ["DOM", "es6"],
  "include": [
    "src/**/*",
    "Player.ts",
    "Game.ts",
    "Sprite.ts",
    "Controller.ts",
    "Model.ts"
  ],
  "exclude": [
      "node_modules"
  ]
}