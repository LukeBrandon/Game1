{
  "compilerOptions": {
      "module": "commonjs",
      "esModuleInterop": true,
      "noImplicitAny": true,
      "experimentalDecorators": true,
      "suppressImplicitAnyIndexErrors": true,
      "removeComments": true,
      "preserveConstEnums": false,
      "allowSyntheticDefaultImports": true,
      "sourceMap": true,
      "target": "ES2017",
      "outDir": "./bin",
  },
  "lib": ["DOM", "es6"],
  "include": [
    "src/**/*"
  ],
  "exclude": [
      "node_modules"
  ]
}