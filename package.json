{
  "name": "site",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "bin": {
    "site": "Controller.js"
  },
  "scripts": {
    "dev": "npm-run-all --parallel build:dev watch:lint",
    "dev:server": "npm-run-all --parallel build:server start:server",
    "start": "node app/server/bind/main.js",
    "start:server": "nodemon app/server/bin/main.js | bunyan -o short -l debug",
    "build:server": "tsc --project app/server -w",
    "build:dev": "webpack",
    "lint": "tslint --format verbose src/**/*.ts",
    "watch:lint": "nodemon -x 'npm run lint' --watch src/ -L -e ts"
  },
  "nodemonConfig": {
    "verbose": false,
    "ignore": "app/client/*"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/bunyan": "^1.8.5",
    "@types/express": "^4.16.0",
    "@types/socket.io": "^2.1.0",
    "@types/socket.io-client": "^1.4.32",
    "npm-run-all": "^4.1.3",
    "ts-loader": "^5.3.0",
    "typescript": "^3.1.6",
    "webpack": "^4.23.1",
    "webpack-cli": "^3.1.2"
  },
  "dependencies": {
    "bunyan": "^1.8.12",
    "express": "^4.16.4",
    "path": "^0.12.7",
    "socket.io": "^2.1.1",
    "socket.io-client": "^2.1.1"
  }
}
